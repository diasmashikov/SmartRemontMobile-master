<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvItemRequestListNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:drawableStart="@drawable/ic_assignment_black_24dp"
        android:drawablePadding="5dp"
        android:text="Номер заявки"
        android:textColor="@color/Black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvItemRequestListDefectNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/tvItemRequestListDefectNum"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:text="10"
        android:textColor="@color/red_600"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvRequestListOptions"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRequestListOptions"
        android:layout_width="30dp"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvItemRequestListAddress"
        android:layout_width="324dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_home_black_24dp"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:text="Адрес"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemRequestListNum" />

    <TextView
        android:id="@+id/tvItemRequestListFlatNum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="кв 1001"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvItemRequestListAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvItemRequestListAddress"
        app:layout_constraintTop_toTopOf="@+id/tvItemRequestListAddress" />

    <TextView
        android:id="@+id/tvItemRequestListProrab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_contact_phone_24"
        android:drawablePadding="5dp"
        android:paddingTop="5dp"
        android:text="Прораб"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemRequestListAddress" />

    <TextView
        android:id="@+id/tvItemRequestListResidenceAcceptDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_business_center_black_24dp"
        android:drawablePadding="5dp"
        android:paddingTop="5dp"
        android:text="Дата сдачи ЖК"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemRequestListProrabPhone" />

    <TextView
        android:id="@+id/tvItemRequestListOkkName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_business_center_black_24dp"
        android:drawablePadding="5dp"
        android:paddingTop="5dp"
        android:text="ОКК"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemRequestListResidenceAcceptDate" />

    <TextView
        android:id="@+id/tvItemRequestListStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_info_outline_black_24dp"
        android:drawablePadding="5dp"
        android:paddingTop="5dp"
        android:text="Текущий статус"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemRequestListOkkName" />

    <TextView
        android:id="@+id/tvItemRequestListProrabPhone"
        android:layout_width="0dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Номер прораба"
        android:autoLink="all"
        android:linksClickable="true"
        android:textColor="@color/blue_800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemRequestListProrab" />

    <TextView
        android:id="@+id/tvItemRequestFlatLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/blue_300"
        android:textStyle="bold|italic"
        android:text="Квартирный листок"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemRequestListStatus" />

    <TextView
        android:id="@+id/tvItemRequestOkkCheckDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Дата повторной проверки"
        android:textColor="@color/red_400"
        android:layout_marginTop="5dp"
        android:textStyle="bold|italic"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemRequestFlatLink" />


</androidx.constraintlayout.widget.ConstraintLayout>